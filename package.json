  "homepage": "https://github.com/Ludoteca-Altomilanese/bgg-sdk",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ludoteca-Altomilanese/bgg-sdk.git"
